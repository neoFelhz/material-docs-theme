<div class="material-header mdl-layout__header mdl-layout__header--waterfall">
    <div class="mdl-layout__header-row">
        <a href="/">
            <span class="material-title mdl-layout-title">
                <img class="material-logo-image" src="/images/logo-black.png">
            </span>
        </a>
        <!-- Add spacer, to align navigation to the right in desktop -->
        <div class="material-header-spacer mdl-layout-spacer"></div>
        
        <%- partial("_partial/search") %>

        <div class="material-navigation-container">
            <nav class="material-navigation mdl-navigation">
                <a class="mdl-navigation__link mdl-typography--text-uppercase" href="/">主页</a>
                <a class="mdl-navigation__link mdl-typography--text-uppercase" href="/start/">开始使用</a>
                <a class="mdl-navigation__link mdl-typography--text-uppercase" href="/intro/">主题介绍</a>
                <a class="mdl-navigation__link mdl-typography--text-uppercase" href="/compose/">开始创作</a>
                <a class="mdl-navigation__link mdl-typography--text-uppercase" href="/expert/">进阶设定</a>
                <a class="mdl-navigation__link mdl-typography--text-uppercase" href="/services/">集成服务</a>
                <a class="mdl-navigation__link mdl-typography--text-uppercase" href="https://github.com/viosey/hexo-theme-material/issues?q=is%3Aissue" target="_blank">常见问题</a>
            </nav>
        </div>

        <% if(is_post()){ %>
            <div class="mdl-layout__drawer-button">
				<i class="material-icons">menu</i>
			</div>
        <% } %>
        
        <a href="./">
            <span class="material-mobile-title mdl-layout-title">
                <img class="material-logo-image" src="/images/logo-small.png">
            </span>
        </a>

        <div id="lang-select-wrap">
            <label class="lang-select-label">
                <img src="/images/globe.svg">
            </label>
            <select id="lang-select">
                <option value="zh-cn">简体中文</option>
                <option value="en">English</option>
            </select>
        </div>

    </div>
</div>